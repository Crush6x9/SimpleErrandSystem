<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.errand.mapper.WithdrawalMapper">

    <resultMap id="WithdrawalResultMap" type="com.errand.entity.Withdrawal">
        <id     property="withdrawalId" column="withdrawal_id"  />
        <result property="userId"       column="user_id"        />
        <result property="amount"       column="amount"         />
        <result property="status"       column="status"         />
        <result property="createTime"   column="create_time"    />
        <result property="updateTime"   column="update_time"    />
    </resultMap>

    <insert id="insertWithdrawal" parameterType="com.errand.entity.Withdrawal" useGeneratedKeys="true" keyProperty="withdrawalId">
        INSERT INTO withdrawal (user_id, amount, status, create_time, update_time)
        VALUES (#{userId}, #{amount}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectWithdrawalsByUserId" parameterType="Long" resultMap="WithdrawalResultMap">
        SELECT * FROM withdrawal WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <update id="updateExpiredWithdrawals" parameterType="java.time.LocalDateTime">
        UPDATE withdrawal
        SET status = '1', update_time = NOW()
        WHERE status = '0'
          AND create_time &lt;= #{expiredTime}
    </update>

</mapper>